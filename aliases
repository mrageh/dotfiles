# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias tlf="tail -f"
alias l='ls'
alias lh='ls -Alh'
alias G="| ag"
alias M="| less"
alias L="| wc -l"
alias clearall="clear && printf '\e[3J'"
alias clean-fl-remote="git branch -r --merged | grep -v master | grep -v current-production | grep -v current-staging | grep -v staging-sandbox | grep -v sandbox-new | grep -v sandbox-deakin-build-passed | grep -v sandbox-deakin | sed 's/origin\///' | xargs -n 1 git push --delete origin"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Bundler
alias b="bundle"

# Test and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"
alias rc="rails console"
alias rs="rails server"
alias fs="foreman start"
alias be="bundle exec "
alias c="be cucumber"
alias cw="be cucumber -p wip"
alias m="bundle exec rake db:migrate db:rollback && bundle exec rake db:migrate"
alias rk="rake"

__git_complete g __git_main
